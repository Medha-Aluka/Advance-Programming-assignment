<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>au.edu.rmit.cosc1295.carehome</groupId>
    <artifactId>DEMO</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>DEMO</name>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.release>17</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <javafx.version>21.0.2</javafx.version>
        <!-- default; auto-overridden by OS profiles below -->
        <javafx.platform>win</javafx.platform>
    </properties>

    <!-- JavaFX deps with OS classifier so IntelliJ/Maven download real platform jars -->
    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
            <classifier>${javafx.platform}</classifier>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
            <classifier>${javafx.platform}</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>${maven.compiler.release}</release>
                </configuration>
            </plugin>

            <!-- No <modules> block here -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <!-- CHANGE this to your app's main class -->
                    <mainClass>au.edu.rmit.cosc1295.carehome.app.CareHomeApp</mainClass>
                    <!-- Optional helpful opens (cuts down warnings) -->
                    <options>
                        <option>--add-opens=javafx.controls/javafx.scene.control=ALL-UNNAMED</option>
                        <option>--add-opens=javafx.graphics/javafx.stage=ALL-UNNAMED</option>
                    </options>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- Pick correct OS classifier automatically -->
    <profiles>
        <profile>
            <id>mac</id>
            <activation><os><family>mac</family></os></activation>
            <properties><javafx.platform>mac</javafx.platform></properties>
        </profile>
        <profile>
            <id>linux</id>
            <activation><os><family>unix</family></os></activation>
            <properties><javafx.platform>linux</javafx.platform></properties>
        </profile>
        <profile>
            <id>windows</id>
            <activation><os><family>Windows</family></os></activation>
            <properties><javafx.platform>win</javafx.platform></properties>
        </profile>
    </profiles>
</project>
