<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="au.edu.rmit.cosc1295.carehome.controller.PrescriptionsController"
            fitToWidth="true" fitToHeight="true" 
            style="-fx-background-color: linear-gradient(to bottom, #E8EAF6 0%, #ffffff 100%);">
    
    <VBox spacing="15" style="-fx-padding: 15;">
        
        <!-- Header with Icon -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="💊" style="-fx-font-size: 32px;"/>
            <Label text="Prescription Management" 
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3F51B5;"/>
        </HBox>
        
        <!-- Doctor Section: Add Prescription -->
        <VBox spacing="12" style="-fx-background-color: linear-gradient(to right, #64B5F6, #90CAF9); -fx-padding: 18; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 2);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="👨‍⚕️" style="-fx-font-size: 20px;"/>
                <Label text="Add Prescription (Doctor Only - Must be on duty)" 
                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>
            
            <GridPane hgap="12" vgap="12">
                <Label text="🏥 Resident:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ComboBox fx:id="residentBox" promptText="Select Resident" prefWidth="250"
                          GridPane.columnIndex="1" GridPane.rowIndex="0"
                          style="-fx-font-size: 13px;"/>
                
                <Label text="💊 Medicine:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="medicineField" promptText="Medicine name" prefWidth="250"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-font-size: 13px; -fx-padding: 8;"/>
                
                <Label text="⚖️ Dose:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="doseField" promptText="e.g., 500mg" prefWidth="250"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"
                           style="-fx-font-size: 13px; -fx-padding: 8;"/>
                
                <Label text="🕐 Schedule:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="scheduleField" promptText="e.g., 08:00, 14:00, 20:00" prefWidth="250"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"
                           style="-fx-font-size: 13px; -fx-padding: 8;"/>
                
                <Button text="✓ Add Prescription" onAction="#onAddPrescription" 
                        style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-font-size: 13px;"
                        GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
        </VBox>
        
        <Separator style="-fx-background-color: #BDBDBD;"/>
        
        <!-- Nurse Section: Administer Medication -->
        <VBox spacing="12" style="-fx-background-color: linear-gradient(to right, #BA68C8, #CE93D8); -fx-padding: 18; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 2);">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="💉" style="-fx-font-size: 20px;"/>
                <Label text="Administer Medication (Nurse Only - Must be on duty)" 
                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>
            
            <GridPane hgap="12" vgap="12">
                <Label text="🏥 Resident:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ComboBox fx:id="residentBox2" promptText="Select Resident" prefWidth="250"
                          GridPane.columnIndex="1" GridPane.rowIndex="0"
                          style="-fx-font-size: 13px;"/>
                
                <Label text="💊 Medicine:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="medicineField2" promptText="Medicine name" prefWidth="250"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"
                           style="-fx-font-size: 13px; -fx-padding: 8;"/>
                
                <Label text="⚖️ Dose:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="doseField2" promptText="e.g., 500mg" prefWidth="250"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"
                           style="-fx-font-size: 13px; -fx-padding: 8;"/>
                
                <Label text="🕐 Prescription Time:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <TextField fx:id="prescriptionTimeField" promptText="e.g., 08:00" prefWidth="250"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"
                           style="-fx-font-size: 13px; -fx-padding: 8;"/>
                
                <Button text="✓ Administer Dose" onAction="#onAdminister" 
                        style="-fx-background-color: #6A1B9A; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-font-size: 13px;"
                        GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
        </VBox>
        
        <Label fx:id="statusLabel" text="✓ Ready" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-text-fill: #2E7D32;"/>
        
        <Separator style="-fx-background-color: #BDBDBD;"/>
        
        <!-- View Prescriptions -->
        <VBox spacing="12">
            <VBox spacing="12" style="-fx-background-color: linear-gradient(to right, #66BB6A, #81C784); -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 2);">
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Label text="👁️" style="-fx-font-size: 18px;"/>
                    <Label text="View Prescriptions for:" style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14px;"/>
                    <ComboBox fx:id="viewResidentBox" promptText="Select Resident" prefWidth="250"
                              style="-fx-font-size: 13px;"/>
                    <Button text="🔄 Refresh" onAction="#onRefreshPrescriptions" 
                            style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 6;"/>
                </HBox>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="📋" style="-fx-font-size: 18px;"/>
                    <Label text="Prescriptions:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #3F51B5;"/>
                </HBox>
                <TableView fx:id="prescriptionsTable" prefHeight="250" minHeight="250"
                           style="-fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 6;">
                    <columns>
                        <TableColumn fx:id="medicineColumn" text="💊 Medicine" prefWidth="150"/>
                        <TableColumn fx:id="doseColumn" text="⚖️ Dose" prefWidth="100"/>
                        <TableColumn fx:id="scheduleColumn" text="🕐 Schedule" prefWidth="200"/>
                        <TableColumn fx:id="doctorColumn" text="👨‍⚕️ Doctor" prefWidth="100"/>
                        <TableColumn fx:id="dateColumn" text="📅 Date" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
            
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="💉" style="-fx-font-size: 18px;"/>
                    <Label text="Administration Records:" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #6A1B9A;"/>
                </HBox>
                <TableView fx:id="adminTable" prefHeight="250" minHeight="250"
                           style="-fx-background-radius: 6; -fx-border-color: #E0E0E0; -fx-border-width: 1; -fx-border-radius: 6;">
                    <columns>
                        <TableColumn fx:id="adminMedicineColumn" text="💊 Medicine" prefWidth="120"/>
                        <TableColumn fx:id="adminDoseColumn" text="⚖️ Dose" prefWidth="80"/>
                        <TableColumn fx:id="adminPrescriptionTimeColumn" text="🕐 Prescription Time" prefWidth="120"/>
                        <TableColumn fx:id="nurseColumn" text="👩‍⚕️ Nurse" prefWidth="100"/>
                        <TableColumn fx:id="adminDateColumn" text="📅 Date/Time" prefWidth="180"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </VBox>
</ScrollPane>
